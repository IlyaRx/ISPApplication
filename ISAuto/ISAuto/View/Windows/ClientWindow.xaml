                           x:Name="CatalogFrame" 
                           Background="#FF4E515A"/>

                    <Border Grid.Column="0" 
                            Background="#FFCACACA">
                        <ScrollViewer VerticalScrollBarVisibility="Hidden">
                            <StackPanel x:Name="ListTypeCatalog"
                                        Margin="0 5 0 0"/>
                        </ScrollViewer>

                        <Border.Effect>
                            <DropShadowEffect Color="#FFE5BA5B" ShadowDepth="0" Opacity="0.2" BlurRadius="10" />
                        </Border.Effect>
                    </Border>


                </Grid>

