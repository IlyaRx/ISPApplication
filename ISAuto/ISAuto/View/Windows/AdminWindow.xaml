               Background="#FF545454"
               NavigationUIVisibility="Hidden"/>

        <Button Grid.Row="1" Style="{StaticResource butFormGreyMonoRad}" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Height="50" Width="250" 
